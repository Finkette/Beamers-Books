<h1>Beamer's Books</h1>

<table>
  <thead>
    <tr>
      <th>Isbn13</th>
      <th>Title</th>
      <th>Author</th>
      <th>Series</th>
      <th>Main Characters</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn13 %></td>
        <td><%= book.title %></td>
        <td><%= @book.author.first_name + " " + @book.author.surname %></td>
        <td><%= book.series %></td>
        <td><%= book.main_characters %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
